        "baseUrl": "./",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "paths": {
            "string/*": [
                "node_modules/string/dist/*"
            ]
        },
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ]
}
